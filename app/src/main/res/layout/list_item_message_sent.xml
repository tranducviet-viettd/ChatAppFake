<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable name="viewmodel" type="com.example.chat_app.ui.chat.ChatViewModel" />

        <variable name="message" type="com.example.chat_app.data.db.entity.Message" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timeText"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:textSize="12sp"
            tools:text="11:40"
            app:bind_epochTimeMsToDate="@{message.epochTimeMs}"
            app:bind_message="@{message}"
            app:bind_message_viewmodel="@{viewmodel}"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:cardCornerRadius="20dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/colorPrimary"
            android:onLongClick="@{() -> viewmodel.onSentBottomToolbar(message)}">

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:paddingRight="12dp"
            android:paddingBottom="6dp"
            android:text="@{message.text}"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="Message"
            android:visibility="@{message.text.length() != 0 ? View.VISIBLE : View.GONE}"
            android:onLongClick="@{() -> viewmodel.onSentBottomToolbar(message)}"
            />

        <ImageView
            android:id="@+id/messageImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="240dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_rectangle_secondary"
            android:visibility="@{message.imageUrl.length() != 0 ? View.VISIBLE : View.GONE}"
            android:onClick="@{() -> viewmodel.imageMessagePressed(message)}"
            app:picassoImageUrl="@{message.imageUrl}"
            tools:src="@tools:sample/avatars"
            tools:visibility="gone"
            android:onLongClick="@{() -> viewmodel.onSentBottomToolbar(message)}"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</layout>