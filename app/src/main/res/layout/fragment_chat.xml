<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.example.chat_app.ui.chat.ChatViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textContentLayout">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesRecycleView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true"

            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/layoutChatbox"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/list_item_message_received"
            app:bind_messages_list="@{viewmodel.messageList}"
            app:bind_should_scroll="@{viewmodel.shouldScrollToBottom}"
            app:bind_disable_item_animator="@{true}"/>

        <View
            android:id="@+id/guiLine"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginBottom="0dp"
            android:background="#dfdfdf"
            app:layout_constraintBottom_toTopOf="@id/layoutChatbox"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutChatbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutChatbox1"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="@{(viewmodel.showSentBottomToolbar || viewmodel.showReceivedBottomToolbar) ? View.GONE : View.VISIBLE}"

                >
            <ImageView
                android:id="@+id/selectImageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/picture_svgrepo_com"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toLeftOf="@id/messageEditText"
                app:layout_constraintBottom_toBottomOf="parent"/>


                <EditText
                    android:id="@+id/messageEditText"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:autofillHints="name"
                    android:background="@drawable/border_corner"
                    android:hint="@string/enter_message"
                    android:inputType="text"
                    android:maxLines="6"
                    android:text="@={viewmodel.newMessageText}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/selectImageBtn"
                    app:layout_constraintRight_toLeftOf="@id/sendBtn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.5" />

            <ImageView
                android:id="@+id/sendBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/send_alt_1_svgrepo_com"
                android:onClick="@{() -> viewmodel.sendMessagePressed()}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/colorPrimary" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <include
                android:id="@+id/bottom_custom_message_sent"
                layout="@layout/bottom_custom_message_sent"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:viewmodel="@{viewmodel}"
                android:visibility="@{viewmodel.showSentBottomToolbar ? View.VISIBLE : View.GONE}"
                tools:visibility="gone"
                />

            <include
                android:id="@+id/bottom_custom_message_received"
                layout="@layout/bottom_custom_message_received"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:viewmodel="@{viewmodel}"
                android:visibility="@{viewmodel.showReceivedBottomToolbar ? View.VISIBLE : View.GONE}"
                tools:visibility="gone"
                />





        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/overlayView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            android:visibility="@{(viewmodel.showSentBottomToolbar || viewmodel.showReceivedBottomToolbar) ? View.VISIBLE : View.GONE}"
            android:onClick="@{() -> viewmodel.offBottomToolbar()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/messagesRecycleView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>